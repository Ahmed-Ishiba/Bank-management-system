{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run Bank System",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g",
                "${workspaceFolder}/source/main.c",
                "${workspaceFolder}/source/bank_sys.c",
                "-o",
                "${workspaceFolder}/source/main",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
